<div class="container-show">
  <% if user_signed_in? %>
  <div class="admin-link">
    <p><%= link_to "NOUVEL OBJET", new_enfant_path  %> / <%= link_to "MODIFIER L'OBJET", edit_enfant_path(@enfant)%> / <%= link_to "SUPPRIMER CET OBJET", enfant_path(@enfant), :method => :delete %> </p>
  </div>
  <% end %>
  <div class="navigation">
    <p><%= link_to "ACCUEIL", "/"  %> / <%= link_to "ENFANT", enfants_path  %> / <%= @enfant.titre.upcase %></p>
  </div>
  <div class="row">
    <div class="col-xs-12 div col-sm-12 col-md-6">
      <!-- Place somewhere in the <body> of your page -->
<div id="tslider" class="flexslider">
  <ul class="slides slides-container">
    <li><img src="<%= cl_image_path  @enfant.ephoto, height: 400, width: 600, crop: :fill%>" alt=""></li>
    <li>
      <% if @enfant.epictures[0].present? %>

      <img src="<%= cl_image_path @enfant.epictures[0].epicture_url(:enfants_image)%>">
    </li>
      <% end %>
    <li>
      <% if @enfant.epictures[1].present? %>
      <img src="<%= cl_image_path @enfant.epictures[1].epicture_url(:enfants_image)%>" />
    </li>
     <% end %>
    <li>
      <% if @enfant.epictures[2].present? %>
      <img src="<%= cl_image_path @enfant.epictures[2].epicture_url(:enfants_image)%>" />
    </li>
     <% end %>
    <li>
      <% if @enfant.epictures[3].present? %>
      <img src="<%= cl_image_path @enfant.epictures[3].epicture_url(:enfants_image)%>" />
    </li>
     <% end %>
    <li>
      <% if @enfant.epictures[4].present? %>
      <img src="<%= cl_image_path @enfant.epictures[3].epicture_url(:enfants_image)%>" />
    </li>
     <% end %>
    <!-- items mirrored twice, total of 12 -->
  </ul>
</div>
<div id="tcarousel" class="flexslider">
  <ul class="slides">
    <li><img src="<%= cl_image_path  @enfant.ephoto, height: 400, width: 600, crop: :fill%>" alt=""></li>
    <li>
      <% if @enfant.epictures[0].present? %>
      <img src="<%= cl_image_path @enfant.epictures[0].epicture_url(:enfants_image)%>" />
    </li>
     <% end %>
    <li>
      <% if @enfant.epictures[1].present? %>
      <img src="<%= cl_image_path @enfant.epictures[1].epicture_url(:enfants_image)%>" />
    </li>
     <% end %>
    <li>
      <% if @enfant.epictures[2].present? %>
      <img src="<%= cl_image_path @enfant.epictures[2].epicture_url(:enfants_image)%>" />
    </li>
     <% end %>
    <li>
      <% if @enfant.epictures[3].present? %>
      <img src="<%= cl_image_path @enfant.epictures[3].epicture_url(:enfants_image)%>" />
    </li>
     <% end %>
    <li>
      <% if @enfant.epictures[4].present? %>
      <img src="<%= cl_image_path @enfant.epictures[3].epicture_url(:enfants_image)%>" />
    </li>
     <% end %>
    <!-- items mirrored twice, total of 12 -->
  </ul>
</div>

    </div>
    <div class="col-xs-12 div col-sm-12 col-md-4 show-description">
        <h1><%= @enfant.titre.capitalize %></h1>
        <h3><%= @enfant.prix %>€</h3>
        <p><%= @enfant.description %></p>
        <div class="btn-dispo">
          <button type="button" class="ai-btn" data-toggle="modal" data-target="#exampleModal"><%= image_tag "disponibilites.svg" %></button>

        </div>
    </div>
  </div>
</div>
<div class="nouveaute-container">
  <div class="row">
    <div class="col xs-12 center">
      <hr class="fancy-line"><h1>AUTRES RECOMMANDATIONS</h1><hr class="fancy-line">
    </div>
  </div>
    <div class="row center-card">
      <% @enfants[0..2].each do |objet| %>

    <div class="col-xs-12 col-sm-12 col-md-4 col-lg-4">
      <div class="card-item">

        <div class="carte" style="background-image: url('<%= cl_image_path objet.ephoto, height: 150, crop: :fill %>'">
        </div>
      <div class="zoom titre-prix">
      <h6><%= objet.titre.upcase %></h2>
      <p><%= objet.prix %>€</p>

      <%= link_to enfant_path(objet) do %>
        <%= image_tag "voir-produit.svg" %>
      <% end %>


    </div>
      </div>
      </div>
    <% end %>
  </div>

</div>

<script type="text/javascript">
  $(document).ready(function() {
    $('#tcarousel').flexslider({
    animation: "slide",
    controlNav: false,
    animationLoop: false,
    slideshow: false,
    itemWidth: 100,
    itemMargin: 5,
    asNavFor: '#tslider',
    directionNav:false,
  });

  $('#tslider').flexslider({
    animation: "slide",
    controlNav: false,
    animationLoop: false,
    slideshow: false,
    sync: "#tcarousel",
    directionNav:false,
  });
  });
</script>
