<div class="container-show">
  <% if user_signed_in? %>
  <div class="admin-link">
    <p><%= link_to "NOUVEL OBJET", new_accessoire_path  %> / <%= link_to "MODIFIER L'OBJET", edit_accessoire_path(@accessoire)%> / <%= link_to "SUPPRIMER CET OBJET", accessoire_path(@accessoire), :method => :delete %> </p>
