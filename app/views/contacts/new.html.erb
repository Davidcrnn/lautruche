    <div class="col-xs-12 col-md-6 contact-form-center">
        <div class="contact-container">
  <div class="row">
  <%= simple_form_for @contact do |f| %>
  <div class="row col-xs-12">
    <%= f.input :nom, label: 'NOM', :required => true, :input_html => {:class => 'input-style'} %>

  </div>
  <div class="row col-xs-12">
    <%= f.input :email, label: 'ADRESSE EMAIL',:required => true, :input_html => {:class => 'input-style'} %>

  </div>
  <div class="row col-xs-12">
    <%= f.input :telephone, label: 'TELEPHONE',:required => true, :input_html => {:class => 'input-style'} %>

  </div>
  <div class="row col-xs-12">
    <%= f.input :message, label: 'MESSAGE', :as => :text, :required => false, :input_html => {:rows => 5, :class => 'input-style'} %>

  </div>
    <div class="form-actions">
    <div class="hidden">
    <%= f.input :nickname %>
    </div>
      <%= f.button :submit, 'ENVOYÉ', :class=> "button" %>
      <br><br>

    </div>
  <% end %>

  </div>

</div>
